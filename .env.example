# AI Marketing Agents - Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=AI Marketing Agents
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/marketing
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# LangSmith Observability (Get from https://smith.langchain.com)
# ===========================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=ai-marketing-agents

# ===========================================
# Pinecone Vector Database (Get from https://www.pinecone.io)
# ===========================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=marketing-knowledge
PINECONE_DIMENSION=1536

# ===========================================
# LLM Configuration
# ===========================================
GROK_API_KEY=your_grok_api_key
OPENAI_API_KEY=your_openai_api_key
LLM_MODEL=grok-2
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ===========================================
# External APIs
# ===========================================
SERPAPI_KEY=your_serpapi_key

# Google Ads API (Get from Google Cloud Console)
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token

# ===========================================
# Circuit Breaker Configuration
# ===========================================
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# ===========================================
# Performance Settings
# ===========================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Development Settings (Optional)
# ===========================================
# Uncomment for local development with SQLite
# DATABASE_URL=sqlite+aiosqlite:///./marketing.db

# ===========================================
# Production Settings (When deploying)
# ===========================================
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=generate-a-secure-random-key-for-production